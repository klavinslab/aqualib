root = "periodic/"

argument
  fragment_ids: generic, "List of fragment ids"
  group1: group, "Group for daily tasks"
  group2: group, "Group for weekly tasks"
end

place daily
  protocol: root + "tasks.rb"
  argument
    type: "Daily"
  end
  group: group1
  marked: true
  window: hours(24)
end

place daily
  protocol: root + "tasks.rb"
  argument
    type: "Weekly"
  end
  group: group2
  marked: true
  window: hours(24)
end
